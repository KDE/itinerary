#ifndef FAKE_QANDROIDJNIENVIRONMENT_H
#define FAKE_QANDROIDJNIENVIRONMENT_H

#include <QAndroidJniObject>

struct JNIEnv
{
    inline bool ExceptionCheck() { return false; }
    inline void ExceptionClear() {}
    inline int GetArrayLength(jobjectArray) { return 0; }
    inline jobject GetObjectArrayElement(jobjectArray, int) { return nullptr; }
};

class QAndroidJniEnvironment
{
public:
    inline JNIEnv* operator->() { return &m_env; }

private:
    JNIEnv m_env;
};

#endif
