                        "stable-only": true,
                        "url-template": "https://github.com/zxing-cpp/zxing-cpp/archive/v$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "kitinerary",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DBUILD_TOOLS=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/pim/kitinerary",
                    "branch": "release/25.08"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/cmake",
                "/lib/libexec",
                "/mkspecs",
                "/etc/xdg/*categories",
                "/share/qlogging-categories5"
            ]
        },
        {
            "name": "kirigami-addons",
